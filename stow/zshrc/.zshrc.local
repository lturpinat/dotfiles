source /etc/X11/xinit/xinitrc.d/50-systemd-user.sh

export PATH="${PATH}:$HOME/.cargo/bin:$HOME/.local/bin"
export EDITOR=nvim

alias ls='ls --color=auto'

# Start i3 if logged using tty1
if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then
  startx /usr/bin/i3
fi
